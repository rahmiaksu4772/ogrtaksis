rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data subcollections.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admins can read/write any user's data.
    match /users/{userId} {
      allow get, list, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Allow read access to public collections like 'notifications' for authenticated users.
    match /notifications/{docId} {
      allow read: if request.auth != null;
      // Allow admin to create/delete notifications.
      allow create, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Forum posts can be read by any authenticated user.
    match /forum/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.author.uid;
      allow update: if request.auth.uid == resource.data.author.uid;
      // Allow delete for author or admin.
      allow delete: if request.auth != null && (request.auth.uid == resource.data.author.uid || request.auth.token.admin == true);
    }

    // Replies and comments can be read by any authenticated user.
    match /forum/{postId}/{subcollection}/{docId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.author.uid;
        allow update: if request.auth.uid == resource.data.author.uid;
        // Allow delete for author or admin.
        allow delete: if request.auth != null && (request.auth.uid == resource.data.author.uid || request.auth.token.admin == true);
    }
  }
}
